package projectOne;
//create a diamond pattern
//based on user input

import java.util.Scanner;

public class pattern {
    public static void main(String[] args){
        //use a for loop to print three stars
        //nested for loops. Use inner(j) compared to outer(i) to make stars on one line

        System.out.println("Hello! How many stars would you like?");
        Scanner scan = new Scanner(System.in);
        int numOfStars = scan.nextInt(); //gets the number the users enters and stores it into numOfStars

        for (int i = 1; i <= numOfStars; i++) //rows - executes while i is less than numberOfStars. OUTER LOOP.
        {
            for (int j = 0; j < i; j++) //columns - executes while j is less than i. INNER LOOP.
            {
                System.out.print("*");
            }
            System.out.println();
        }
        //take care of reversing what has been done so far i.e collapse the pyramid

        for (int i = numOfStars-1; i > 0; i--) // -1 as total number can't be repeated to make the pattern!
        {
            for(int j = 0; j < i; j++) //runs the same
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
